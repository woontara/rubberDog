# Environment Variables
NODE_ENV=production
PORT=3001

# MongoDB Atlas Connection (Required for multi-user support)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/rubberdog?retryWrites=true&w=majority

# Python executable path (if custom)
# PYTHON_PATH=python

# API Keys Configuration
# Anthropic/Claude API Key (Required for blog generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# YouTube API Keys (Required for video analysis)
# You can set individual keys or use comma-separated list
# Option 1: Individual API keys (recommended for failover)
YOUTUBE_API_KEY_PRIMARY=your_primary_youtube_api_key_here
YOUTUBE_API_KEY_BACKUP=your_backup_youtube_api_key_here
YOUTUBE_API_KEY_ADDITIONAL=your_additional_youtube_api_key_here

# Option 2: Comma-separated list (alternative)
# YOUTUBE_API_KEYS=key1,key2,key3

# Optional API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PEXELS_API_KEY=your_pexels_api_key_here
UNSPLASH_API_KEY=your_unsplash_api_key_here

# Session Management
SESSION_SECRET=your-secure-session-secret-here
SESSION_EXPIRE_HOURS=24

# Database Settings
DB_CONNECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Storage Limits (MongoDB Atlas Free Tier)
FREE_TIER_LIMIT_BYTES=536870912
COMPRESSION_THRESHOLD_BYTES=1024

# Monitoring & Logging
ENABLE_DB_MONITORING=true
LOG_LEVEL=info

# Security
# CORS_ORIGIN=https://yourdomain.com